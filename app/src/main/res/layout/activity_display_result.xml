<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".displayResult">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dip"
        android:layout_height="220dip"
        android:layout_below="@id/textViewRating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="id"
        android:textAlignment="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="price" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_below="@id/textPrice"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:numStars="5"
        android:stepSize="1" />

    <Button
        android:id="@+id/btn_rating"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_below="@id/ratingbar"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:text="rating"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_below="@id/btn_rating"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:text="logout"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dip"
        android:text="MADE BY AMIR AMINUDDIN BIN WAN HUSSIN "
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/copyright2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dip"
        android:text="FYP BACHELOR OF ENGINEERING TECHNOLOGY (HONOURS) IN COMPUTER SYSTEMS"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/copyright3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/copyright2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dip"
        android:text="UNIKL MIIT 2019"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="8sp" />

</RelativeLayout>